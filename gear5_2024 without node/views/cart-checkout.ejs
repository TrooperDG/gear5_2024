    <%- include('./partials/header.ejs')  %>

    <link rel="stylesheet" href="stylesheets/cart-checkout.css">
    <link rel="stylesheet" href="stylesheets/cart-order-summary.css">

</head>

<body>

  <%- include('./partials/nav-side-bar.ejs')  %>
 

  <div class="main">
    <% if(cartData){%>
      

    <div class="heading-checkout">Checkout(<span><%= user.cartTotal %> Items</span>)</div>
    <div class="heading-order-review">Review Your Order</div>
    
      <div class="cart-checkout-grid">
        <div class="cart-left-grid js-cart-left-grid"  >

          <% cartData.forEach(item => { %>

          <div class="cart-item-block-grid">
            <div class="cart-item-delivery-date"> 
              Your Order Will be Delivered By Monday, February 6.
            </div>
            <div class="cart-item-info-grid">
                <div class="cart-product-image">
                  <img src= <%= item.productId.image%> alt="">
                  
                </div>
                <div class="cart-product-description">
                  <div class="cart-item-name"><%= item.productId.name %> </div>
                  <div class="cart-item-price">$<%= item.productId.price %> </div>
                  <div class="cart-item-quantity-container">
                    <div class="cart-item-quantity"> Quantity: <%= item.quantity %></div>
                    <!-- <div>update</div>
                    <div>delete</div> -->
                  </div>
                </div>
                
              <div class="cart-item-delivery-options">
                <div class="choose-option">
                  Choose a delivery option
                </div>
                <div class="delivery-option">
                  
                    <input class="delivery-option-input" type="radio" name="optiondg">  
                    
                    <div>
                      <div class="delivery-option-date"> 
                        Monday, November 29
                      </div>
                      <div class="delivery-option-price">
                        Free Shipping
                      </div>
                    </div>
                  
                </div>
                <div class="delivery-option">
                  
                    <input class="delivery-option-input" type="radio" name="optiondg">  
                    
                    <div>
                      <div class="delivery-option-date"> 
                        Monday, November 29
                      </div>
                      <div class="delivery-option-price">
                        Free Shipping
                      </div>
                    </div>
                  
                </div>
                <div class="delivery-option">
                  
                    <input class="delivery-option-input" type="radio" name="optiondg">  
                    
                    <div>
                      <div class="delivery-option-date"> 
                        Monday, November 29
                      </div>
                      <div class="delivery-option-price">
                        Free Shipping
                      </div>
                    </div>
                  
                </div>
              </div>
            </div>
          </div>

          <% }); %>
        </div>

        <% let totalmoney=0 %>
        <% cartData.forEach(item => { %>
        <% totalmoney = totalmoney + item.productId.price %>
          
        <% }); %>
        
        <div class="cart-right-grid"> 
          <div class="payment-summary">
            <div class="payment-summary-title">
              Order Summary
            </div>
            
            <div class="payment-summary-row">
              <div>Items (<%= user.cartTotal %>):</div>
              <div class="payment-summary-money"><span class=".rupee-symbol">&#8377</span><%= totalmoney %>.00</div>
            </div>

            <div class="payment-summary-row">
              <div>Shipping &amp; handling:</div>
              <div class="payment-summary-money"><span class=".rupee-symbol">&#8377</span>49.00</div>
            </div>
            <% totalmoney= totalmoney + 49 %>
            <div class="payment-summary-row subtotal-row">
              <div>Total before tax:</div>
              <div class="payment-summary-money"><span class=".rupee-symbol">&#8377</span><%= totalmoney %>.00</div>
            </div>

            <% let tax =totalmoney*0.1%>
            <div class="payment-summary-row">
              <div>Estimated tax (10%):</div>
              <div class="payment-summary-money"><span class=".rupee-symbol">&#8377</span><%= tax %></div>
            </div>
            <% totalmoney = totalmoney + tax %>
            <div class="payment-summary-row total-row">
              <div>Order total:</div>
              <div class="payment-summary-money"><span class=".rupee-symbol">&#8377</span><%= totalmoney %></div>
            </div>
            <a href="/orders">

              <button class="place-order-button button-primary">
                Place your order
              </button>
            </a>
              
          </div>
        </div>
      </div>
    <% } %>


  </div>



      <%- include('./partials/footer.ejs')  %>


      <script type="module" src="scripts/cart-checkout.js"></script>
</body>

</html>